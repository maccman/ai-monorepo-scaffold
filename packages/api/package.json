{
  "name": "@app/api",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Server-side tRPC API definitions",
  "main": "index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings=0 --cache --concurrency=2",
    "lint:fix": "eslint . --fix --cache --concurrency=2",
    "lint:ci": "eslint . --max-warnings=0 --cache --concurrency=1 --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@app/db": "workspace:*",
    "@app/utils": "workspace:*",
    "@trpc/server": "^11.1.2",
    "kysely": "^0.28.2",
    "pg": "^8.15.6",
    "superjson": "^2.2.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/pg": "^8.15.1",
    "dotenv": "^16.4.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
